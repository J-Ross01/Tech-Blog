{{#extend "main"}}
    {{#content "body"}}
        <h2>Welcome, {{username}}!</h2>
        <h3>Your Dashboard</h3>
        <div class="blog-posts">
            {{#if blogPosts.length}}
                {{#each blogPosts}}
                    <div class="blog-post">
                        <h4>{{title}}</h4>
                        <p>{{content}}</p>
                    </div>
                {{/each}}
            {{else}}
                <p>No blog posts found.</p>
            {{/if}}
        </div>
        <button id="add-comment-btn">Add Blog Comment</button>
    {{/content}}
{{/extend}}
