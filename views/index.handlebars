{{#extend "main"}}
    {{#content "body"}}
        <h1>Welcome to the Tech Blog</h1>
        {{#each posts}}
            <div class="post">
                <h2>{{title}}</h2>
                <p>{{content}}</p>
                <p>Author: {{user.username}}</p>
            </div>
        {{/each}}
    {{/content}}
{{/extend}}
